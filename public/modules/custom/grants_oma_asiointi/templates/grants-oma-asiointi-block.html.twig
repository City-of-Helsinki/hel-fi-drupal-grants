<div class="oma-asiointi-block">
    <h2>Oma asiointi</h2>
    <div class="header">
        <span class="user">{{ userProfileData['firstName'] }} {{ userProfileData['lastName'] }}</span>
        <span class="link"><a href="/oma-asiointi">Siirry omaan asiointikansioon</a></span>
    </div>
    <div class="content">
      <div class="messages">
          <h4>Viestit</h4>
          {{ dump(messages) }}
          {% for message in messages %}
              <div class="message">
                  Hakemusnumero: {{ message['caseId'] }} <br />
                  Viesti: {{ message['body'] }} <br />
                  Link: <a href="{{ path('grants_handler.view_application', {'submission_id': message['caseId']}) }}">{{ message['caseId'] }}</a>
              </div>
          {% endfor %}
      </div>
      <div class="submissions">
          <h4>Viimeiset hakemukset</h4>
          {% for submission in submissions %}
              <div class="submission">
                  <p class="submission-title">{{ applicationTypes[submission['application_type']][lang] }}</p>
                  <p>Viimeisin tallennus: <br />
                  {{ submission['form_timestamp'] }}</p>
                  <p><strong>Hakemuksen numero</strong><br />
                  {{ submission['application_number'] }}</p>
                  <p><a href="{{ path('grants_handler.view_application', {'submission_id': submission['application_number']}) }}"><span class="sr-only">Avaa hakemus</span><span class="hds-icon hds-icon--arrow-right hds-icon--size-s" aria-hidden="true"></span></a></p>
              </div>
          {% endfor %}
      </div>
    </div>
</div>
