{#
/**
 * @file
 * Default theme implementation for react submission data.
 *
 * @ingroup themeable
 */
#}
{% set classes = [
  'webform-submission-data',
  view_mode ? 'webform-submission-data--view-mode-' ~ view_mode|clean_class,
] %}

<div{{ attributes.addClass(classes) }}>
  <div class="container">
    <div class="grants-handler__completion">
      <div><i class="hel-icon hel-icon--check-circle hel-icon--size-xl" aria-hidden="true"></i></div>
      <h2>{{ "Grant application sent successfully"|t({}, {'context': 'grants_handler'})}}</h2>
      <div class="grants-handler__completion__info-row">
        <div class="grants-handler__completion__item--submitted">
          <h3>{{ "Submission date"|t({}, {'context': 'grants_handler'})}}</h3>
            {{ applicationTimestamp }}
        </div>
        <div class="grants-handler__completion__item--number">
          <h3>{{ "Application number"|t({}, {'context': 'grants_handler'})}}</h3>
          {{ submissionId }}
        </div>
      </div>
      <div>
        <div data-status="{{ statusString }}" class="hide-spinner application-list__item--status application-list__item--status--{{ statusString|lower }} applicationStatusCheckable" data-application-number="{{ applicationNumber }}">{{ statusStringHumanReadable }}</div>
        <div class="hds-loading-spinner hds-loading-spinner--small">
          <div></div>
          <div></div>
          <div></div>
        </div>
        <div class="application-list__item--error">
          <span class="hel-icon hel-icon--alert-circle hel-icon--size-s" aria-hidden="true"></span>
          <span aria-hidden="true" class="application-list--error-text">{{ 'There has been an error in updating application status, please reload the page.'|t({}, {'context': 'grants_handler'})}}</span>
        </div>
      </div>
      <div class="grants-handler__completion__longtext">
        <p>
          {{ "Make sure that the status of the application changes from “Submitted” to “Received”. The application is only fully received when the status reads “Received”."|t({}, {'context': 'grants_handler'})}}
        </p>
        <p>
          {{ "There may be a delay in changing the status. For example, due to maintenance breaks, the delay can be longer than normal."|t({}, {'context': 'grants_handler'})}}
        </p>
      </div>
      <div class="grants-handler__completion__button-row">
        {% include '@hdbt/navigation/link-button.html.twig' with {
            type: 'primary',
            label: 'My applications'|t,
            url: ownApplicationsLink,
          }
        %}

        {% include '@hdbt/navigation/link-button.html.twig' with {
          type: 'secondary',
          label: 'View application'|t,
          url: viewApplicationLink,
        }
        %}
        {% include '@hdbt/navigation/link-button.html.twig' with {
            type: 'secondary',
            label: 'Print application'|t,
            url: printApplicationLink,
          }
        %}
      </div>
    </div>
  </div>
</div>
