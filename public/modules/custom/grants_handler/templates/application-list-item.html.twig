

<li
  data-drupal-selector="{{ applicationNumber }}"
  id="{{ applicationNumber }}"
  class="application-list__item {{ classes|join(' ') }}"
>
  <div class="application-list__item__row">
    <div class="application-list__item--status application-list__item--status--{{ statusString|lower }}">
      {{ statusString }}
    </div>
    <div class="applicataion-list__item--delete">
      <a class="hds-link hds-link--medium" href="/">
        <span aria-hidden="true" class="hds-icon hds-icon--trash hds-icon--size-s"></span><span class="link-label">
          {{ "Delete application"|t }}
        </span>
      </a>
    </div>
  </div>
  <h3 class="application-list__item--name">
    {{ applicationFormName }}
  </h3>
  <div>
    {{ viewApplicationLink }}
  </div>
  <div class="application-list__item--number">
    <h4>{{ "Application number"|t }}</h4>
    {{ applicationNumber }}
  </div>
  <div class="application-list__item--submitted">
    {{ applicationSubmitted }}
  </div>

  <div>
    {{ editApplicationLink }}
  </div>
</li>
