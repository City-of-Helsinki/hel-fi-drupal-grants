{#
/**
 * @file
 * Theme implementation for webform element help
 *
 * Available variables
 * - element: form element
 * - help: Help content.
 * - help_icon: Help icon.
 *
 * @see template_preprocess_webform_element_help()
 *
 * @ingroup themeable
 */
#}
{% apply spaceless %}
{{ attach_library('webform/webform.element.help') }}
<button {{ attributes }}><span class="visually-hidden">{{ "Read more"|t }}: {{ help_title }}</span><span aria-hidden="true" class="hel-icon hel-icon--info-circle hel-icon--size-s"></span></button>
{% endapply %}
