{#
/**
 * @file
 * Default theme implementation for webform submission.
 *
 * Available variables:
 * - elements: An array of elements to display in view mode.
 * - webform_submission: The webform submission.
 * - webform: The webform.
 *
 * @see template_preprocess_webform_submission()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'webform-submission',
  'webform-submission--webform-' ~ webform.id()|clean_class,
  webform_submission.isSticky() ? 'webform-submission--sticky',
  view_mode ? 'webform-submission--view-mode-' ~ view_mode|clean_class,
]
%}
<div{{ attributes.addClass(classes) }}>
  {{ navigation }}

  <h3 id="submission-application-number">{{ applicationNumber }}</h3>

  <a class="hds-button hds-button--secondary" href="{{ editSubmissionUrlCustom.toString() }}">
    <span aria-hidden="true" class="hds-icon hds-icon--pen-line"></span>
    <span class="hds-button__label">{{ 'Edit submission'|t }}</span>
  </a>
  <a class="hds-button hds-button--secondary" href="{{ editSubmissionUrlWebform.toString() }}">
    <span aria-hidden="true" class="hds-icon hds-icon--pen-line"></span>
    <span class="hds-button__label">{{ 'Edit submission (Webform)' }}</span>
  </a>

  <div id="message-form-wrapper">
    {{ messages }}
  </div>

  <div>
    {{ events }}
  </div>

  <div>
    {{ history }}
  </div>
  {{ information }}
  {{ submission }}
</div>
