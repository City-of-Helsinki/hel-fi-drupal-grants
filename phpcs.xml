<?xml version="1.0"?>
<ruleset name="Drupal">
  <arg name="extensions" value="php,module,install,theme,inc"/>
  <exclude-pattern>*.css</exclude-pattern>
  <exclude-pattern>*.js</exclude-pattern>
  <rule ref="Drupal" />
  <rule ref="DrupalPractice">
    <exclude name="DrupalPractice.General.OptionsT.TforValue" />
    <exclude name="DrupalPractice.Objects.UnusedPrivateMethod.UnusedMethod" />
  </rule>
  <rule ref="Drupal">
    <!-- Legacy code uses invalid enum naming - disable the linter rule -->
    <exclude name="Drupal.NamingConventions.ValidEnumCase.NoUpperAcronyms" />
    <exclude name="Drupal.NamingConventions.ValidEnumCase.NoUnderscores" />
  </rule>
  <!-- TODO enable Generic.PHP.RequireStrictTypes
  <rule ref="Generic.PHP.RequireStrictTypes" />
  -->
</ruleset>
